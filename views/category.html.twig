{% extends "layout.html.twig" %} {% block title %}{% endblock %} {% block content %}

<body>
    <div class="container">
        <div class="row">

            {% for article in articles %}
            <div class="col-xs-4 col-sm-4 col-md-3">
                <h1><a class="thumbnail" href="{{ path('article', { 'id': article.id }) }}"><img src="{{app.request.basepath}}/images/{{article.id}}.jpg"></a></h1>
            </div>
            {% endfor %}

        </div>
    </div>
</body>
{% endblock %}